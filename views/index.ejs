<!DOCTYPE html>
<html>
<head>
    <title>DynamoDB Data Display</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#formDrawer" aria-controls="formDrawer" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
</nav>

<!-- Drawer for Form -->
<div class="collapse" id="formDrawer">
    <div class="bg-light border-right" id="drawer-wrapper">
        <form action="/submit" method="post" class="p-4">
            <input type="text" name="id" id="randomId" placeholder="ID" required class="form-control mb-2"/>
            <input type="text" name="first" id="firstName" value="<%= randomFirstName %>" placeholder="First Name" required class="form-control mb-2"/>
            <input type="text" name="last" id="lastName" value="<%= randomLastName %>" placeholder="Last Name" required class="form-control mb-2"/>
            <input type="number" name="age" id="randomAge" placeholder="Age" required class="form-control mb-2"/>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<!-- Main Content -->
<div class="container mt-4">
    <h1>Items in matt-table</h1>
    <% if (data && data.Items) { %>
        <table>
            <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
            </tr>
            </thead>
            <tbody>
            <% data.Items.forEach(function(item) { %>
                <tr>
                    <td><%= item.id %></td>
                    <td><%= item.first %></td>
                    <td><%= item.last %></td>
                    <td><%= item.age %></td>
                </tr>
            <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No data available.</p>
    <% } %>
</div>

<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="/js/main.js"></script>
</body>
</html>
